<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TodoX</title>
    <!-- Sử dụng Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    {# CSS #}
    <link rel="stylesheet" href="{{request.static_url('todox:static/css/styles.css')}}">
</head>

<body
    class="bg-gray-100 text-slate-800 min-h-screen flex flex-col items-center py-10 font-sans selection:bg-blue-100 selection:text-blue-700">

    <div
        class="fixed inset-0 -z-10 h-full w-full bg-white bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] bg-[size:6rem_4rem]">
        <div
            class="absolute bottom-0 left-0 right-0 top-0 bg-[radial-gradient(circle_500px_at_50%_200px,#C9EBFF,transparent)]">
        </div>
    </div>

    <section id="todoapp"
        class="w-full max-w-2xl bg-white/90 backdrop-blur-xl rounded-2xl shadow-xl border border-white/20 overflow-hidden transition-all duration-300 hover:shadow-2xl">
        <header id="header" class="p-8 pb-4">
            <h1
                class="text-4xl font-extrabold text-slate-800 tracking-tight text-center mb-6 bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600">
                Tasks</h1>

            <div class="relative group">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                    <svg class="h-6 w-6 text-gray-400 group-focus-within:text-blue-500 transition-colors" fill="none"
                        viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                </div>
                <input id="new-todo"
                    class="block w-full pl-12 pr-4 py-4 bg-gray-50 border-2 border-gray-100 rounded-xl text-lg placeholder-gray-400 focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-500/10 transition-all duration-200"
                    placeholder="Add a new task..." autofocus>
            </div>
        </header>

        <section id="main" class="relative z-10" style="display: none;">
            <div class="flex items-center px-6 py-2 border-b border-gray-100 bg-gray-50/50">
                <input id="toggle-all" type="checkbox" class="peer hidden">
                <label for="toggle-all"
                    class="text-sm font-medium text-gray-500 cursor-pointer hover:text-blue-600 select-none flex items-center gap-2 px-2 py-1 rounded transition-colors">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    Mark all complete
                </label>
            </div>
            <ul id="todo-list" class="m-0 p-0 list-none divide-y divide-gray-100 max-h-[60vh] overflow-y-auto"></ul>
        </section>

        <footer id="footer"
            class="bg-gray-50 p-4 text-sm flex flex-col sm:flex-row justify-between items-center gap-4 text-gray-500 border-t border-gray-200"
            style="display: none;"></footer>
    </section>

    <div id="info" class="mt-8 text-center text-gray-400 text-xs tracking-wide">
        <p class="mb-2">Double-click to edit a todo</p>
        <p>Built with Pyramid & Backbone.js</p>
    </div>

    <!-- Templates -->
    <script type="text/template" id="item-template">
		<div class="view flex items-center p-4 hover:bg-blue-50/50 transition-colors duration-200 group">
			<input class="toggle custom-checkbox shrink-0" type="checkbox" <%= completed ? 'checked' : '' %>>
			
			<label class="break-all ml-4 block text-lg leading-snug cursor-pointer transition-all duration-200 select-none grow text-slate-700 font-medium"><%- title %></label>
			
            <button class="destroy invisible group-hover:visible ml-4 p-2 text-gray-300 hover:text-red-500 hover:bg-red-50 rounded-lg transition-all duration-200 focus:outline-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
            </button>
		</div>
		<input class="edit w-full text-lg p-3 mx-4 border-2 border-blue-500 rounded-lg shadow-sm focus:outline-none" value="<%- title %>">
	</script>

    <script type="text/template" id="stats-template">
		<span id="todo-count" class="font-medium"><strong class="text-blue-600"><%= remaining %></strong> <%= remaining === 1 ? 'item' : 'items' %> left</span>
		
        <ul id="filters" class="flex items-center gap-1 bg-gray-200/50 p-1 rounded-lg">
			<li>
				<a class="px-3 py-1 rounded-md text-xs font-semibold transition-all duration-200 hover:text-blue-600 [&.selected]:bg-white [&.selected]:text-blue-600 [&.selected]:shadow-sm" href="#/">All</a>
			</li>
			<li>
				<a class="px-3 py-1 rounded-md text-xs font-semibold transition-all duration-200 hover:text-blue-600 [&.selected]:bg-white [&.selected]:text-blue-600 [&.selected]:shadow-sm" href="#/active">Active</a>
			</li>
			<li>
				<a class="px-3 py-1 rounded-md text-xs font-semibold transition-all duration-200 hover:text-blue-600 [&.selected]:bg-white [&.selected]:text-blue-600 [&.selected]:shadow-sm" href="#/completed">Completed</a>
			</li>
		</ul>
		
		<% if (completed) { %>
		<button id="clear-completed" class="text-xs font-medium text-gray-400 hover:text-red-500 hover:underline transition-colors">Clear completed (<%= completed %>)</button>
		<% } %>
	</script>

    <!-- Libraries -->
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/backbone.js/1.3.3/backbone-min.js"></script>

    <!-- App Scripts -->
    <script src="{{request.static_url('todox:static/js/models/todo.js')}}"></script>
    <script src="{{request.static_url('todox:static/js/collections/todos.js')}}"></script>
    <script src="{{request.static_url('todox:static/js/views/todo.js')}}"></script>
    <script src="{{request.static_url('todox:static/js/views/app.js')}}"></script>
    <script src="{{request.static_url('todox:static/js/routers/router.js')}}"></script>
    <script src="{{request.static_url('todox:static/js/app.js')}}"></script>
</body>

</html>